/* pages/vant/vant.wxss */

van-tab {
}

.van-nav-bar .van-nav-bar__title {
  width: 100%;
  max-width: 100%;
  overflow: hidden;
}

.van-nav-bar {
  margin-top: -20px;
}

.van-tabs__nav {
  max-width: 60%;
  margin: 0 auto;
}

.van-nav-bar__left, .van-nav-bar__right {
  z-index: 9;
}

van-overlay .wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.van-tabs .van-tabs__scroll {
  background: black;
}

.van-nav-bar .van-hairline--bottom {
  padding: 0xp;
}

van-grid .van-grid-item__content--square {
  padding: 0;
}

van-grid-item {
  position: relative;
}

van-grid-item image {
  filter: brightness(0.6);
}

van-grid-item view {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

van-grid-item view text {
  color: white;
  font-weight: bold;
}

.van-tab--active .van-ellipsis {
  color: #fff;
}

swiper {
  width: 100%;
  height: 240px;
}

swiper image {
  width: 100%;
  display: block;
}

.slot {
  background: #000;
  color: #fff;
}

van-icon {
  transform: translateY(-10px);
}

.waihuan {
  width: 85%;
  height: 100%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.zhans {
  width: 100%;
  height: 80%;
  background: #fff;
  overflow: hidden;
  border-radius: 10px;
  position: relative;
}

.zhans image {
  width: 100%;
  height: 60%;
  display: block;
}

.van-icon-cross {
  transform: scale(1.5);
}

.zhans .time {
  position: absolute;
  z-index: 999;
  color: white;
  transform: translateY(-100%);
  padding: 10%;
  display: flex;
}

.zhans .time .day {
  font-size: 2em;
  padding-right: 10px;
  border-right: 1px solid #fff;
}

.zhans .time .year {
  padding-left: 10px;
  font-size: 0.8em;
  line-height: 1.6em;
}

.zhans .title {
  margin-top: 1em;
  text-align: center;
  font-weight: 600;
}

.zhans .content {
  padding: 5%;
}

.search {
  width: 100%;
  height: 100%;
  background: #191919;
}

/* .search .van-icon-search {
  transform: scale(1.5) translateY(.5em);
} */

.search .van-icon {
  transform: translateY(0.5em);
}

.search .van-search__action {
  color: white;
}

.search .van-search__content--square {
  background: #5e5e5e;
  color: white;
}

.search .van-field__input {
  color: white;
}

.search-loading {
  width: 100%;
  height: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hot-kw {
  display: flex;
  flex-wrap: wrap;
  padding: 0 0.8em;
  z-index: 1000;
}

.hot {
  color: #fff;
  font-size: 0.8em;
  padding: 0.5em;
  margin: 0.5em;
  background: #363636;
  border-radius: 5%;
}

.hot-title {
  color: #7e7e7e;
  padding: 1em;
}
